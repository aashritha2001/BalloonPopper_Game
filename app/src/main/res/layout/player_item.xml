  Description: This file contains the UI layout of each of the cards in the recyclerView
  page (main page). The cards contain a rank value, player name, score, and date-->


<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="6dp"
    app:cardElevation="3dp"
    android:layout_margin="2dp"
    android:id="@+id/cardView"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="#"
            android:id="@+id/rankVal"
            android:textAlignment="textStart"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"

            android:layout_weight="1"
            android:text="Player"
            android:id="@+id/nameVal"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            />

        <TextView
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:layout_weight="1"
            android:text="Date"
            android:id="@+id/dateVal"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:layout_weight="1"
            android:text="Score"
            android:id="@+id/scoreVal"
            android:textAlignment="textEnd"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            />






    </LinearLayout>

</androidx.cardview.widget.CardView>